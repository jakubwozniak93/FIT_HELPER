<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#000"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.jakub.fit_helper.Barki">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz ćwiczenie:"
            android:textStyle="bold"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b1"
                android:onClick="dane"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:id="@+id/barki_arnoldki"
                    android:layout_centerInParent="true"
                    android:onClick="dane"
                    android:background="@drawable/barki_arnoldki"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arnoldki"
                    android:background="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textView4"
                    android:layout_column="1"
                    android:onClick="dane"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b2"
                android:onClick="dane"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:id="@+id/barki_pociaganie_broda"
                    android:layout_centerInParent="true"
                    android:onClick="dane"
                    android:background="@drawable/barki_podciaganie_broda"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Podciąganie\nsztangi\ndo brody"
                    android:background="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:id="@+id/textView8"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:onClick="dane"/>

            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b3"
                android:onClick="dane"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:id="@+id/barki_unoszenie_przod"
                    android:layout_centerInParent="true"
                    android:onClick="dane"
                    android:background="@drawable/barki_unoszenie_przod"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unoszenie\nsztangi\nw przód"
                    android:background="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:id="@+id/textView12"
                    android:gravity="center"
                    android:layout_column="1"
                    android:onClick="dane"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b4"
                android:onClick="dane"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:id="@+id/barki_wioslowanie"
                    android:layout_centerInParent="true"
                    android:onClick="dane"
                    android:background="@drawable/barki_wioslowanie"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wiosłowanie\nsztangą"
                    android:background="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:id="@+id/textView13"
                    android:gravity="center"
                    android:layout_column="1"
                    android:onClick="dane"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b5"
                android:onClick="dane"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:id="@+id/barki_wyciskanie_sztangielek"
                    android:layout_centerInParent="true"
                    android:onClick="dane"
                    android:background="@drawable/barki_wyciskanie_sztangielek"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wyciskanie\nsztangielek"
                    android:background="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textView14"
                    android:layout_column="1"
                    android:onClick="dane"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b6"
                android:onClick="dane">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:id="@+id/barki_wyciskanie_sztangi_przed"
                    android:layout_centerInParent="true"
                    android:onClick="dane"
                    android:background="@drawable/barki_wyciskanie_sztangi_przed"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wyciskanie\nsztangi\nsprzed\ngłowy"
                    android:background="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textView7"
                    android:layout_column="1"
                    android:onClick="dane"/>

            </TableRow>




        </TableLayout>



    </LinearLayout>
</ScrollView>
